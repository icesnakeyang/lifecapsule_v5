<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.cdtime.lifecapsule.meta.admin.dao.AdminTopicDao">
    <!--配置表和对象的字段映射 -->
    <resultMap id="topicMap" type="cc.cdtime.lifecapsule.meta.topic.entity.TopicView">
        <result property="topicId" column="topic_id"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="noteId" column="note_id"/>
        <result property="authorName" column="author_name"/>
    </resultMap>

    <update id="updateTopic" parameterType="map">
        update topic
        <set>
            <if test="status!=null">
                status=#{status}
            </if>
        </set>
        where topic_id=#{topicId}
    </update>

    <select id="listTopic" parameterType="map" resultMap="topicMap">
        select *
        from topic
        where 1 = 1
        <choose>
            <when test="isRoot">
                and pid is null
            </when>
        </choose>
        <choose>
            <when test="status!=null">
                and status=#{status}
            </when>
        </choose>
        order by create_time desc
        limit #{size}
        offset #{offset}
    </select>

    <select id="totalTopic" parameterType="map" resultType="java.lang.Integer">
        select count(*) as total
        from topic
        where 1 = 1
        <choose>
            <when test="isRoot">
                and pid is null
            </when>
        </choose>
        <choose>
            <when test="status!=null">
                and status=#{status}
            </when>
        </choose>
    </select>

    <select id="getTopic" parameterType="java.lang.String" resultMap="topicMap">
        select *
        from topic
        where topic_id = #{topicId}
    </select>

    <delete id="deleteTopic" parameterType="java.lang.String">
        delete
        from topic
        where topic_id = #{topicId}
    </delete>
</mapper>