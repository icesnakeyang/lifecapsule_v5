    <!--聚合查询标签-->
    <select id="listTagGroup" parameterType="map" resultMap="tagMap">
        select tag_name
        from tag_note tn
        left join tag_base tb on tn.tag_id = tb.tag_id
        where 1 = 1
        <choose>
            <when test="userId!=null">
                and user_id = #{userId}
            </when>
        </choose>
